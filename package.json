{
  "name": "lead-magnet-ai-platform",
  "version": "1.0.0",
  "description": "Multi-tenant AI-powered lead magnet generation platform",
  "private": true,
  "workspaces": [
    "frontend",
    "backend/api",
    "backend/worker",
    "infrastructure"
  ],
  "scripts": {
    "install:all": "npm install && cd frontend && npm install && cd ../backend/api && npm install && cd ../worker && npm install && cd ../../infrastructure && npm install",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:api": "cd backend/api && npm run dev",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
    "build:frontend": "cd frontend && npm run build",
    "build": "npm run build --workspace frontend",
    "start": "npm run start:deploy --workspace frontend",
    "deploy:infra": "cd infrastructure && npm run deploy",
    "test:all": "npm run test --workspaces",
    "lint:all": "npm run lint --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces && cd backend/worker && pytest",
    "format": "npm run format --workspace backend/api && npx prettier --write \"frontend/src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "build:context": "node scripts/build-context.js"
  },
  "keywords": [
    "lead-magnet",
    "ai",
    "openai",
    "aws",
    "serverless"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "scrapybara": "^2.5.2",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7"
  }
}
